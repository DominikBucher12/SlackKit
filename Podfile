	pod 'SKCore'
	pod 'SKClient'
	pod 'SKWebAPI'
	pod 'SKRTMAPI'
	pod 'SKServer'
end

target 'SlackKit tvOS' do
	platform :tvos, '12.0'
	pod 'SKCore'
	pod 'SKClient'
	pod 'SKWebAPI'
	pod 'SKRTMAPI'
	pod 'SKServer'
end
